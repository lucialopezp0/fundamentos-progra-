#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int i,id, ID, n;
	float nf, np, ef, p1, p2, p3;

	cout<<"introduzca la cantidad de alumnos: ";
	cin>>n;
	i=1;
	while (i<=n)
	{

		cout<<"ID: ";
	    cin>>id;
		cout<<"inroduza la nota practica: ";
		cin>> np;
		cout<<"introduzca la nota de los tres parciales: "<<endl;
		cout<<"parcial 1: "; cin>> p1;
		cout<<"parcial 2: "; cin>> p2;
		cout<<"parcial 3: "; cin>> p3;
		cout<<"introduzca la nota del examen final: ";
		cin>> ef;
		nf=np*0.2+((p1+p2+p3)/3)*0.4+ef*0.4;
		cout<<"la nota final del alumno "<<id<<" es: "<< nf<<endl;
		i++;
}
	getch();
}
