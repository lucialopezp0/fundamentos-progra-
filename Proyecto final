    cout<<"Ingrese su contrasena: "; cin>>password;

    if(
        userName == "rodrigo" &&
        password == "maricon"
    ){
        cout<<endl;
        cout<<endl;
        cout<<"Datos correctoss"<<endl;
        return true;
    }

    return false;
}

