#include <iostream>
#include <bits/stdc++.h>

using namespace std;

struct Room {
  string type = "";
  double rating = 0.0;
  float price = 0;
  bool available = true;
};

vector<Room> rooms;

void selectionMessage(){
    cout<<"su opcion es: ";
}

